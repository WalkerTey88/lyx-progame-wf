// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
}
///////////////////////////////////////////////////////////////
// User & Auth
///////////////////////////////////////////////////////////////
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  role      UserRole @default(GUEST)
  bookings  Booking[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum UserRole {
  ADMIN
  GUEST
}
///////////////////////////////////////////////////////////////
// Room Types & Rooms
///////////////////////////////////////////////////////////////
model RoomType {
  id            String           @id @default(uuid())
  name          String
  description   String?
  basePrice     Int              // 单位：分（sen）
  capacity      Int              // 最大入住人数
  images        String[]         @default([])
  rooms         Room[]
  priceCalendar PriceCalendar[]
  blockDates    RoomBlockDate[]
  bookings      Booking[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}
model Room {
  id          String      @id @default(uuid())
  roomNumber  String
  roomTypeId  String
  roomType    RoomType    @relation(fields: [roomTypeId], references: [id])
  bookings    Booking[]
  blockDates  RoomBlockDate[]
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  @@unique([roomTypeId, roomNumber])
}
///////////////////////////////////////////////////////////////
// Pricing & Block Dates
///////////////////////////////////////////////////////////////
model PriceCalendar {
  id         String    @id @default(uuid())
  roomTypeId String
  roomType   RoomType  @relation(fields: [roomTypeId], references: [id])
  date       DateTime
  price      Int       // 该日期的每晚房价（分）
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  @@unique([roomTypeId, date])
}
model RoomBlockDate {
  id         String    @id @default(uuid())
  roomId     String?
  roomTypeId String?
  room       Room?     @relation(fields: [roomId], references: [id])
  roomType   RoomType? @relation(fields: [roomTypeId], references: [id])
  date       DateTime
  reason     String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}
///////////////////////////////////////////////////////////////
// Booking
///////////////////////////////////////////////////////////////
enum BookingStatus {
  PENDING
  PAID
  CANCELLED
  COMPLETED
}
model Booking {
  id             String        @id @default(uuid())
  userId         String?
  roomId         String
  roomTypeId     String
  user           User?         @relation(fields: [userId], references: [id])
  room           Room          @relation(fields: [roomId], references: [id])
  roomType       RoomType      @relation(fields: [roomTypeId], references: [id])
  guestName      String
  guestEmail     String
  guestPhone     String
  checkIn        DateTime
  checkOut       DateTime
  totalPrice     Int
  status         BookingStatus @default(PENDING)
  specialRequest String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  @@index([roomTypeId])
  @@index([roomId])
  @@index([checkIn])
  @@index([checkOut])
}