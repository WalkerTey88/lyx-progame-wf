generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

///////////////////////////////////////////////////////////////
// User & Auth
///////////////////////////////////////////////////////////////

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String?
  role      UserRole  @default(GUEST)

  bookings  Booking[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  GUEST
}

///////////////////////////////////////////////////////////////
// Room Types & Rooms
///////////////////////////////////////////////////////////////

model RoomType {
  id           String           @id @default(uuid())
  name         String
  description  String?
  basePrice    Int              // 基础每晚价格（单位：分 / sen）
  capacity     Int              // 最大入住人数

  rooms        Room[]
  priceCalendar PriceCalendar[]
  blockDates   RoomBlockDate[]
  bookings     Booking[]

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model Room {
  id          String      @id @default(uuid())
  roomNumber  String
  roomTypeId  String
  roomType    RoomType    @relation(fields: [roomTypeId], references: [id])

  bookings    Booking[]
  blockDates  RoomBlockDate[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([roomTypeId, roomNumber])
}

///////////////////////////////////////////////////////////////
// Pricing & Block Dates
///////////////////////////////////////////////////////////////

model PriceCalendar {
  id         String    @id @default(uuid())
  roomTypeId String
  roomType   RoomType  @relation(fields: [roomTypeId], references: [id])

  date       DateTime  // 当天 00:00
  price      Int       // 当天价格（单位：分 / sen）

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([roomTypeId, date])
}

model RoomBlockDate {
  id         String    @id @default(uuid())
  roomTypeId String
  roomType   RoomType  @relation(fields: [roomTypeId], references: [id])

  startDate  DateTime
  endDate    DateTime
  reason     String?

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([roomTypeId, startDate, endDate])
}

///////////////////////////////////////////////////////////////
// Booking
///////////////////////////////////////////////////////////////

model Booking {
  id          String         @id @default(uuid())

  userId      String?
  roomId      String
  roomTypeId  String

  guestName   String
  guestEmail  String
  guestPhone  String

  checkIn     DateTime       // 入住日 00:00
  checkOut    DateTime       // 退房日 00:00（不住这晚）

  totalPrice  Int            // 总价（单位：分 / sen）
  status      BookingStatus  @default(PENDING)

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  user        User?          @relation(fields: [userId], references: [id])
  room        Room           @relation(fields: [roomId], references: [id])
  roomType    RoomType       @relation(fields: [roomTypeId], references: [id])

  @@index([roomTypeId, checkIn, checkOut])
  @@index([roomId, checkIn, checkOut])
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
  COMPLETED
}
